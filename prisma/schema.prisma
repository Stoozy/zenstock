// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "foreignKeys"
}


model warehouse {
  id          String @id @default(uuid())
  userId      String
  name        String


  // alert settings
  notify      String[]  // eg. "Email", "SMS"
  email       String
  number      String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model item {
  id          String @id @default(uuid())
  warehouseId String 
  name        String
  description String
  category    String
  quantity    Float
  cost        Float
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model purchase_order {
  id          String @id @default(uuid())
  warehouseId String
  supplier    String
  item        String
  price       Float
  quantity    Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model alert {
  id            String @id @default(uuid())
  itemId        String

  triggerType   String    // "Comparison", "Range"

  comparison    String    // ">=", "<=", ">", "<"
  values        Float[]   // 1 value if triggerType is "Comparison"
                          // 2 if "Range": [low , high] indexed 0 and 1 respectively

  alertedValue  Float     // value that caused the alert

  settingsId    String    // foreign key for alert settings

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

